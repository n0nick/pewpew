<Window x:Class="PewPew.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    
    <Grid Name="layoutGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <DockPanel Grid.Row="0" Margin="0" >
            <Button Name="btnStart" Click="btnStart_Click" Content="Start" />
        </DockPanel>
        <DockPanel Grid.Row="1" Margin="0" >
            <Button Name="btnStop" Click="btnStop_Click" Content="Stop" />
        </DockPanel>
        <DockPanel Grid.Row="2" Margin="0">
            <Label Name="lblConnectionStatus" Content="Awaiting your command" HorizontalAlignment="Center"/>
        </DockPanel>
    </Grid>
</Window>

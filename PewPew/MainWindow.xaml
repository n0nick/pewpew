<Window x:Class="PewPew.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Width="640" Height="480" Loaded="Window_Loaded" Closing="Window_Closing">
    
    <Grid Name="layoutGrid" Width="640" Height="480">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <DockPanel Grid.Row="0" Margin="0" >
            <Button Name="btnStart" Click="btnStart_Click" Content="Start" />
        </DockPanel>
        <DockPanel Grid.Row="1" Margin="0" >
            <Button Name="btnStop" Click="btnStop_Click" Content="Stop" />
        </DockPanel>
        <DockPanel Grid.Row="2" Margin="0">
            <Label Name="lblConnectionStatus" HorizontalAlignment="Center" Content="Not listening"/>
        </DockPanel>
        <Viewbox Grid.Row="3" Stretch="Uniform" HorizontalAlignment="Center">
            <Image Name="ColorImage" Width="640" Height="480"/>
        </Viewbox>
        <Viewbox Grid.Row="3" Stretch="Uniform" HorizontalAlignment="Center">
            <Image Name="SkeletonImage" Width="640" Height="480"/>
        </Viewbox>
    </Grid>
</Window>
